{
    "name": "instagram-comment-lead-intelligence",
    "version": "1.0.0",
    "description": "AI-powered lead generation from Instagram comments with production-grade hardening, structured logging, comprehensive error handling, and memory-efficient streaming",
    "main": "src/main.js",
    "types": "dist/main.d.ts",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "scripts": {
        "start": "node src/main.js",
        "dev": "NODE_ENV=development nodemon src/main.js",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .js,.ts --max-warnings 0",
        "lint:fix": "eslint src --ext .js,.ts --fix",
        "format": "prettier --write \"src/**/*.{js,ts,json,md}\"",
        "format:check": "prettier --check \"src/**/*.{js,ts,json,md}\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:integration": "jest --testMatch '**/*.integration.test.js'",
        "test:unit": "jest --testMatch '**/*.test.js' --testPathIgnorePatterns '*.integration.test.js'",
        "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
        "validate-schema": "node .actor/validate-schema.js",
        "prepare": "husky install",
        "precommit": "lint-staged",
        "prepush": "npm run validate",
        "security-check": "npm audit --audit-level=moderate",
        "security-fix": "npm audit fix",
        "clean": "rm -rf dist node_modules coverage",
        "reinstall": "npm run clean && npm install",
        "docker:build": "docker build -t instagram-lead-api .",
        "docker:run": "docker run -p 3000:3000 --env-file .env instagram-lead-api",
        "docker:test": "docker run instagram-lead-api npm test"
    },
    "keywords": [
        "instagram",
        "lead-generation",
        "ai",
        "crm",
        "sales",
        "marketing",
        "nlp",
        "openai",
        "gpt-4",
        "apify",
        "typescript",
        "production-ready"
    ],
    "author": {
        "name": "Your Company",
        "email": "support@yourcompany.com",
        "url": "https://yourcompany.com"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/instagram-comment-lead-intelligence.git"
    },
    "bugs": {
        "url": "https://github.com/your-org/instagram-comment-lead-intelligence/issues"
    },
    "homepage": "https://github.com/your-org/instagram-comment-lead-intelligence#readme",
    "dependencies": {
        "apify": "^3.1.10",
        "axios": "^1.6.0",
        "openai": "^4.20.0",
        "cheerio": "^1.0.0-rc.12",
        "dotenv": "^16.3.1",
        "validator": "^13.11.0",
        "lodash": "^4.17.21",
        "date-fns": "^3.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/lodash": "^4.14.200",
        "@types/validator": "^13.11.0",
        "@types/jest": "^29.5.10",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "typescript": "^5.3.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-security": "^1.7.1",
        "prettier": "^3.1.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "nodemon": "^3.0.2",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "ajv-cli": "^5.0.0",
        "supertest": "^6.3.3",
        "nock": "^13.4.0"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md}": [
            "prettier --write"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.+(ts|js)",
            "**/?(*.)+(spec|test).+(ts|js)"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,ts}",
            "!src/**/*.test.{js,ts}",
            "!src/**/*.spec.{js,ts}",
            "!src/**/__tests__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>/src/test/setup.js"
        ],
        "testTimeout": 30000,
        "verbose": true
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "js,ts,json",
        "ignore": [
            "src/**/*.test.js",
            "src/**/*.spec.js"
        ],
        "exec": "node src/main.js"
    }
}